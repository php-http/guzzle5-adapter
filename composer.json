{
    "name": "php-http/guzzle5-adapter",
    "description": "Guzzle 5 HTTP Adapter",
    "license": "MIT",
    "keywords": ["guzzle", "http"],
    "homepage": "http://php-http.org",
    "authors": [
        {
            "name": "Eric GELOEN",
            "email": "geloen.eric@gmail.com"
        },
        {
            "name": "Márk Sági-Kazár",
            "email": "mark.sagikazar@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.4",
        "psr/http-message-implementation": "^1.0",
        "php-http/httplug": "^1.0.0-beta",
        "php-http/discovery": "~0.5",
        "guzzlehttp/guzzle": "^5.1"
    },
    "require-dev": {
        "ext-curl": "*",
        "guzzlehttp/ringphp": "^1.1",
        "guzzlehttp/psr7": "^1.0",
        "php-http/adapter-integration-tests": "dev-master",
        "php-http/client-common": "^0.1"
    },
    "provide": {
        "php-http/client-implementation": "1.0"
    },
    "autoload": {
        "psr-4": {
            "Http\\Adapter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Http\\Adapter\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-ci": "vendor/bin/phpunit --coverage-text --coverage-clover=build/coverage.xml"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.2-dev"
        }
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
